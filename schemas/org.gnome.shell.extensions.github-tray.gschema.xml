<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.github-tray" path="/org/gnome/shell/extensions/github-tray/">
    <key name="github-token" type="s">
      <default>''</default>
      <summary>GitHub Personal Access Token</summary>
      <description>Token for GitHub API access</description>
    </key>
    <key name="github-username" type="s">
      <default>''</default>
      <summary>GitHub Username</summary>
      <description>Your GitHub username</description>
    </key>
    <key name="panel-box" type="s">
      <default>'right'</default>
      <summary>Panel position</summary>
      <description>Icon position in the top bar: left, center, right</description>
    </key>
    <key name="max-repos" type="i">
      <default>10</default>
      <summary>Max repositories</summary>
      <description>Maximum number of repositories to display in the list</description>
    </key>
    <key name="sort-by" type="s">
      <default>'updated'</default>
      <summary>Sort repositories by</summary>
      <description>Sort criteria: updated, pushed, created, stars, name</description>
    </key>
    <key name="sort-order" type="s">
      <default>'desc'</default>
      <summary>Sort order</summary>
      <description>Sort order: asc (ascending) or desc (descending)</description>
    </key>
    <key name="local-editor" type="s">
      <default>'code'</default>
      <summary>Local editor command</summary>
      <description>Command to open local projects (e.g., code, gedit, gnome-text-editor)</description>
    </key>
    <key name="local-projects" type="s">
      <default>'{}'</default>
      <summary>Local project paths</summary>
      <description>JSON mapping of repository names to local paths</description>
    </key>
    <key name="debug-mode" type="b">
      <default>false</default>
      <summary>Debug mode</summary>
      <description>Enable debug mode to show debug button for testing notifications</description>
    </key>
  </schema>
</schemalist>
